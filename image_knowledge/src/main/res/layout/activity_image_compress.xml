<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原图：" />

        <ImageView
            android:id="@+id/iv_origin"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="fitXY" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="dctTransform"
            android:text="DCT变换" />

        <ImageView
            android:id="@+id/iv_dct_transform"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="fitXY" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="idctTransform"
            android:text="DCT反变换" />

        <ImageView
            android:id="@+id/iv_idct"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="fitXY" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="dctBlockTransform"
            android:text="分块DCT变换" />

        <ImageView
            android:id="@+id/iv_dct_block_transform"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="fitXY" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="quantization"
            android:text="量化" />

        <ImageView
            android:id="@+id/iv_quantization"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="fitXY" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="idctBlockTransform"
            android:text="分块DCT反变换" />

        <ImageView
            android:id="@+id/iv_idct_block_transform"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="fitXY" />

    </LinearLayout>
</ScrollView>